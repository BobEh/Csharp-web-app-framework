@model BrandViewModel
@{
    ViewData["Title"] = "Index";
}
<div class="flex-container">
    <div class="w-100">
        <h4 style="text-align:center">Brands</h4>
        <br />
        <form asp-controller="Brand" asp-action="SelectBrand" method="post">
            <select style="position:relative;padding:5px;" asp-for="BrandId" asp-items="@Model.GetBrands()" class="form-group form-control" onchange="this.form.submit();">
                <option selected style="display:none;">Select Brand</option>
            </select>
        </form>
        <catalogue brand="@Model.BrandId"></catalogue>
    </div>
</div>
<div class="modal" id="details_popup">
    <div class="modal-dialog">
        <div class="modal-content col-12" style="background-color:lightblue">
            <div class="modal-body">
                <button type="button" class="close" style="font-size:xx-large;" data-dismiss="modal">X</button>
                <div class="text-center">
                    <img alt="" id="detailsGraphic" /><br />
                    <h4 id="description"></h4>
                </div>
                <form asp-controller="Brand" asp-action="SelectItem" method="post" role="form">
                    <div class="text-center col-sm-offset-2">
                        <div class="modalrow mt-4">
                            <div class="columnL">Product Name</div>
                            <div class="columnR" id="productname"></div>
                        </div>
                        <div class="modalrow">
                            <div class="columnL">MSRP</div>
                            <div class="columnR" id="msrp"></div>
                        </div>
                        <div class="modalrow mb-4">
                            <div class="columnL">Qty</div>
                            <div class="columnR" id="productname">
                                <input asp-for="Qty" type="number" maxlength="3" size="3" style="width: 50px;" id="qty" />
                                <input asp-for="Id" type="hidden" id="selectedId" />
                            </div>
                        </div>
                    </div>
                    <div class="text-center">
                        <button type="submit" class="btn btn-outline-dark">Add To Cart</button>
                        <button id="btnRemove" type="submit" class="btn btn-outline-danger">Remove Item</button>
                        <a href="/Tray" class="btn btn-outline-success">View Cart</a>
                    </div>
                </form>
            </div>
            <div class="m-2">
                <div class="text-center font-weight-bold" id="results"> @ViewBag.AddMessage</div>
            </div>
        </div><!--modal-content-->
    </div><!--modal-dialog-->
</div><!--modal-->